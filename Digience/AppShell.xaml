<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Digience.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Digience.Pages"
    xmlns:local="clr-namespace:Digience"
    Shell.FlyoutBehavior="Disabled"
    Title="Digience">
    <TabBar>
        <Tab Icon="home.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:Feeds}"
                Route="Feeds" />
        </Tab>
        
        <Tab Icon="chat.png">
            <ShellContent
                ContentTemplate="{DataTemplate pages:Chat}"
                Route="Chat" />
        </Tab>
        <Tab Icon="notification.png">
            <ShellContent
        ContentTemplate="{DataTemplate pages:Notification}"
        Route="Notification" />
        </Tab>
        <Tab Icon="profile.png">
            <ShellContent
        ContentTemplate="{DataTemplate pages:Profile}"
        Route="Profile" />
        </Tab>
    </TabBar>
</Shell>
